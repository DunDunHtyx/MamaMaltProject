page{
    width: 100%;
    height: 100%;
    background-color: #FFF8F8;
}


/* 通知项 */

#NoticeItemBox{
    border: 1px solid gray;
    background-color: rgba(255, 255, 255, 0.493);
    width: 90%;
    margin: 0 auto;
    margin-top: 30rpx;
    border-radius: 20rpx;
}
#NoticeTitle{
    font-size: 35rpx;
    letter-spacing: 4rpx;
    margin-top: 10rpx;
    margin-left: 10rpx;
    font-family: AlibabaPuHuiTi-2-55-Regular;
}
#NoticeContent{
    width: 92%;
    margin: 0 auto;
    margin-top: 10rpx;
    /* border: 1px solid red; */
    /* height: 300rpx; */
    /* padding: 10rpx 30rpx 30rpx 30rpx;  */
    letter-spacing: 4rpx;
    font-family: AlibabaPuHuiTi-2-45-Light;
    overflow: hidden;
    text-overflow: ellipsis; 
    display: -webkit-box;
    -webkit-line-clamp:5;
    -webkit-box-orient: vertical;
}
#NoticeTime{
    font-family: AlibabaPuHuiTi-2-45-Light;
    letter-spacing: 4rpx;
    text-align: end;
    margin-top: 20rpx;
    width: 95%;
}