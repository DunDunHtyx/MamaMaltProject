.top{
  width: 90%;
  display: flex;
  height: 330rpx;
  margin: 0 auto;
  border-radius: 30rpx;
  margin-top: 30rpx;
  border: 2px solid gainsboro;
}
  .top-le{
    width: 200rpx;
    height: 300rpx;
    /* border: 1px solid red; */
    border-radius: 30rpx;
    margin-left: 30rpx;
    margin-top: 12rpx;
    /* padding: 6rpx; */
  }
  .top-le image{
    width: 200rpx;
    height: 300rpx;
    border-radius: 30rpx;
  }
  .top-rig{
    width: 400rpx;
    height: 300rpx;
    margin-top: 10rpx;
    margin-left: 20rpx;
    /* border: 1px solid red; */
  }
    .title{
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
      text-overflow: ellipsis;
      width: 390rpx;
      height: 150rpx;
      /* border: 1px solid red; */
    }
    .price{
      text-align: right;
      line-height: 230rpx;
      font-size: 50rpx;
      font-weight: 600;
      color: red;
    }
