page{
    width: 100%;
    height: 100%;
    background-color: #FFF8F8;
}

#PostItemMoudle{
    width: 95%;
    margin: 0 auto;
    border-radius: 10rpx;
    /* border: 1px solid red; */
    border: 1px solid rgba(128, 128, 128, 0.651);
    margin-top: 40rpx;
    background-color: white;
}
/* 头部 */
#PostTopMoudle{
        display: flex;
        justify-content: space-between;
        padding: 20rpx;
        /* border: 1px solid red; */
}
/* 头左 */
#PostTopLeftBox{
    width: 40%;
    display: flex;
    /* border: 1px solid red; */
}
#PostAvater{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
}
#PostName{
    font-size: 36rpx;
    margin-top: 26rpx;
    margin-left: 20rpx;
    letter-spacing: 4rpx;
    font-family: AlibabaPuHuiTi-2-55-Regular;
}
/* 头右 */
#PostRightBox{
    /* border: 1px solid red; */
    width: 60%;
    display: flex;
    justify-content: flex-end;
}
/* 编辑+删除按钮 */
.ButtonItem{
        margin-left: 30rpx;
        margin-top: 18rpx;
        border-radius: 10rpx;
        width: 120rpx;
        height: 60rpx;
        line-height: 55rpx;
        text-align: center;
        /* border: 1px solid red; */
}
.ButtonItem_text{
    font-size: 33rpx;
    letter-spacing: 8rpx;
    font-family: AlibabaPuHuiTi-2-55-Regular;
}
/* 中部 */
#contentBox{
    /* border: 1px solid red; */
    width: 93%;
    margin: 0 auto;
    margin-top: 10rpx;
    height: 165rpx;
    overflow: hidden; 
    text-overflow: ellipsis; 
    display: -webkit-box;
    -webkit-line-clamp:2;
    -webkit-box-orient: vertical;
    
}
#content{
    font-size: 30rpx;
    letter-spacing: 4rpx;
    font-family: AlibabaPuHuiTi-2-45-Light;
}
/* 底部 相关活动 */
#bottomMoudle{
    background-color: rgba(177, 172, 172, 0.205);
    display: flex;
    width: 93%;
    margin: 0 auto;
    border-radius: 10rpx;
    margin-top: 20rpx;
    /* border: 1px solid red; */
    padding: 0rpx 20rpx 20rpx 20rpx;
}
#ActivityImage{
    width: 140rpx;
    height: 160rpx;
    margin-top: 20rpx;
    border-radius: 16rpx;
}

#ActivityInfoBox{
    /* border: 1px solid red; */
    width: 60%;
    height: 160rpx;
    margin-top: 20rpx;
    margin-left: 30rpx;
}
#Activity_title_Buttom{
        display: flex;
}
#Activity_title{
    font-family: AlibabaPuHuiTi-2-45-Light;
    overflow: hidden; 
    font-size: 28rpx;
    letter-spacing: 4rpx;
    text-overflow: ellipsis;
    margin-top: 5rpx; 
    display: -webkit-box;
    -webkit-line-clamp:2;
    -webkit-box-orient: vertical;
}
#ActivityPrtice{
    font-size: 36rpx;
    margin-top: 20rpx;
    letter-spacing: 4rpx;
    font-family: AlibabaPuHuiTi-2-55-Regular;
}