page{
  width: 100%;
  height: 100%;
  background-color: #FFF8F8;
}
/* 选择 关联项目活动 */
.choiceAct{
  padding: 20rpx;
  margin-top: 20rpx;
  /* border: 1px solid red; */
}
.choiceText{
  font-size: 40rpx;
  letter-spacing: 6rpx;
  font-family: AlibabaPuHuiTi-2-55-Regular;
}
.choiceBox{
    display: flex;
    justify-content: space-between;
    border: 1px solid #BBBBBB;
    height: 190rpx;
    width: 98%;
    margin: 0 auto;
    margin-top: 30rpx;
    border-radius: 20rpx;
    background-color: white;
}
.choice_one{
    height: 60rpx;
    /* border: 1px solid red; */
    text-align: center;
    margin-top: 70rpx;
    margin-left:30rpx;
}
.choiceOne_text{
  color: gray;
  font-size: 34rpx;
  letter-spacing: 8rpx;
  font-family: AlibabaPuHuiTi-2-45-Light;
}
.choice_two{
    /* border: 1px solid red; */
    height: 40rpx;
    margin-right: 30rpx;
    margin-top: 75rpx;
}
.choiceTwo_icon{
    width: 40rpx;
    height: 40rpx;
}


#module_one{
  border: 1px solid #BBBBBB;
  width: 95%;
  margin: 0 auto;
  margin-top: 80rpx;
  background-color: white;
  border-radius: 30rpx;
}

.ql-container {
  box-sizing: border-box;
  padding: 12px 15px;
  width: 100%;
  height:280rpx;
  background: #fff;
  font-size: 35rpx;
  font-family:AlibabaPuHuiTi-2-45-Light ;
  letter-spacing: 8rpx;
  line-height: 1.5;
  margin-top: 10rpx;
}
.action{
  font-family:AlibabaPuHuiTi-2-45-Light ;
  letter-spacing: 4rpx;
}
/* 发布按钮 */
.finshButton{
  /* border: 1px solid red; */
  height: 80rpx;
  width: 80%;
  margin: 0 auto;
  margin-top: 90rpx;
  border-radius: 20rpx;
  text-align: center;
  line-height: 75rpx;
  background-color: #fe5f55;
}
.button_text{
  font-family: AlibabaPuHuiTi-2-55-Regular;
  font-size: 40rpx;
  letter-spacing: 16rpx;
  color: white;
}
/* 显示 选中关联活动 */
.selectedActBoxs{
    /* border: 1px solid red; */
    width: 90%;
    /* display: flex; */
}
.selectedActImage{
    width:110rpx;
    height: 150rpx;
    border-radius: 15rpx;
    margin-left: 25rpx;
    margin-top: 18rpx;
}
.selectedActInfo{
  font-family: AlibabaPuHuiTi-2-45-Light;
  /* border: 1px solid red; */
  margin-left: 30rpx;
  width: 70%;
}
.selectedActInfo_one{
  margin-top: 20rpx;
  font-size: 33rpx;
  letter-spacing: 4rpx;
  font-family: AlibabaPuHuiTi-2-45-Light;
  overflow: hidden; 
  text-overflow: ellipsis; 
  display: -webkit-box;
  -webkit-line-clamp:1;
  -webkit-box-orient: vertical;
}
.selectedActInfo_two{
  margin-top: 12rpx;
  font-size: 26rpx;
  letter-spacing: 4rpx;
  font-family: AlibabaPuHuiTi-2-45-Light;
}
.selectedActInfo_three{
	font-family: AlibabaPuHuiTi-2-45-Light;
  margin-top: 10rpx;
  letter-spacing: 4rpx;
  overflow: hidden; 
  text-overflow: ellipsis; 
  display: -webkit-box;
  -webkit-line-clamp:1;
  -webkit-box-orient: vertical;
}