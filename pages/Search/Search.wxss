#box {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: -1;
  background-size: 100% 100%;
  background-color: #FFF8F8;
}

#searchModul {
  width: 95%;
  display: flex;
  margin: 0 auto;
  margin-top: 30rpx;
  justify-content: space-between;
}

#searchBox {
  background-color: #e7e5e5;
  width: 80%;
  height: 65rpx;
  border-radius: 30rpx;
  display: flex;
  margin-left:8rpx;
}

#icon {
  width: 45rpx;
  height: 45rpx;
  margin-top: 10rpx;
  margin-left: 30rpx;
}

#searchInput {
  width: 75%;
  margin-top: 9rpx;
  margin-left: 18rpx;
  font-size: 33rpx;
  letter-spacing: 4rpx;
  font-family:AlibabaPuHuiTi-2-45-Light ;
}

#cencel {
  margin-right: 20rpx;
  margin-top:6rpx;
  font-size: 35rpx;
  letter-spacing: 4rpx;
}

#history {
  width: 95%;
  margin: 0 auto;
  margin-top: 60rpx;
}
#title{
    display: flex;
    justify-content: space-between;
}
#titleText{
  margin-left: 5rpx;
    font-size: 34rpx;
    letter-spacing: 4rpx;
}
#hisIcon{
    width: 40rpx;
    height: 40rpx;
    margin-right: 40rpx;
}
#hotSearch {
  width: 95%;
  margin: 0 auto;
  margin-top: 30rpx;
}
#hotText{
  margin-left:5rpx;
  font-size: 34rpx;
  letter-spacing: 4rpx;
}
.choiceModul{
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content:start;
}
.choiceItem{
    font-size: 35rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;   
    border: 1px solid gray;
    border-radius: 30rpx;
    margin-top: 30rpx;
    background-color: white;
}

.choiceItem:not(:nth-child(50n)){
    margin-left: 25rpx;
} 
#ds{
  height: 20rpx;
}