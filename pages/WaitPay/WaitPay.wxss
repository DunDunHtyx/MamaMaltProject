page{
  width: 100%;
  height: 100%;
}
/* 待付款显示 */
.showAwaitMldule{
    border-bottom: 1px solid gray;
    height: 420rpx;
    text-align: center;
    box-sizing: border-box;
    padding: 30rpx;
}
.showAwaitText{
  font-size: 55rpx;
  letter-spacing: 6rpx;
  font-family: AlibabaPuHuiTi-2-55-Regular;
  margin-top: 20rpx;
}
/* 提示 */
.NoticeBox{
    display: flex;
    margin: 0 auto;
    margin-top: 40rpx;
    margin-left: 10rpx;
    text-align: center;
    /* border: 1px solid red; */
    font-family: AlibabaPuHuiTi-2-45-Light;
    font-size: 30rpx;
    letter-spacing: 4rpx;
}
.NoticeTime{
  /* text-align: center; */
  font-family: AlibabaPuHuiTi-2-45-Light;
  color: #e42c64;
}
/* 取消订单&去付款订单按钮 */
.ButtonModule{
    /* border: 1px solid red; */
    display: flex;
    justify-content: space-around;
    margin: 0 auto;
    margin-top: 60rpx;
} 
.cancleBox{
    border: 1px solid #dd7777;
}
.cancleText{
  padding: 10rpx;
  width: 190rpx;
  font-size: 35rpx;
  letter-spacing: 4rpx;
  color: #dd7777;
  font-family: AlibabaPuHuiTi-2-45-Light;
}
.goPayBox{
    /* padding: 10rpx; */
    border: 1px solid #FE8402;
}
.goPayText{
  width: 190rpx;
  padding: 10rpx;
  font-size: 35rpx;
  letter-spacing: 4rpx;
  color: #FE8402;
  font-family: AlibabaPuHuiTi-2-45-Light;
}

/* 订单具体内容*/
.orderDetailModule{
    /* border: 1px solid red; */
    padding: 30rpx;
    margin-top: 20rpx;
    font-family: AlibabaPuHuiTi-2-45-Light;
}
.showOrderDetail{
    font-size: 36rpx;
    letter-spacing: 8rpx;
}
.showOrderDetailBox{
    border-top: 1px solid #525252;
    border-bottom: 1px solid #525252;
    margin-top: 30rpx;
    /* border-radius: 20rpx; */
    padding: 20rpx;
    padding-left: 30rpx;
}
/* 信息项 */
.showItem{
    display: flex;
    margin-top: 25rpx;
}
.showItem_one{
    font-size: 36rpx;
    letter-spacing: 8rpx;
}
.showItem_two{  
    margin-left: 40rpx;
    font-size: 35rpx;
    letter-spacing: 6rpx;
}   
.showItems{
  display: flex;
    margin-top: 25rpx;
