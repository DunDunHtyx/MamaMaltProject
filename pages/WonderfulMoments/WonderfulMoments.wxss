page{
  padding: 15rpx;
  background-color: #f9f9faab;
}

.wonderfulMoments{
  text-align: justify;
}

#left,#right{
  display: inline-block;
  vertical-align: top;
  width: 49%;
}

/* 模块中代码样式 */
.item{
  background-color: #fff;
  margin: 10rpx 3%;
  margin-bottom: 20rpx;
  display: inline-block;
  width: 94%;
  border-radius: 20rpx;
  overflow: hidden;
  /* border: 1px solid red; */
}
/* 照片 */
.item_img{
  width: 100%;
}
/* 文本内容 */
#textContent{
  margin-left: 5rpx;
  height: 90rpx;
  box-sizing: border-box;
  padding: 12rpx;
  letter-spacing: 4rpx;
  color: black;
  font-family: AlibabaPuHuiTi-2-45-Light;
  font-size: 26rpx;
  overflow: hidden; 
  text-overflow: ellipsis; 
  display: -webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
  /* border: 1px solid red; */
}
/* 发布者信息 */
#PublisherInformation{
  /* border: 1px solid red; */
  margin-top: 10rpx;
  background: white;
}
#PublisherBox{
  /* margin-top: 40rpx; */
  display: flex;
  padding-left: 15rpx;
}
#avater{
  width: 40rpx;
  height:40rpx;
  border-radius: 40rpx;
}
#NickName{
  font-size: 25rpx;
  letter-spacing: 4rpx;
  margin-left: 10rpx;
  margin-top: 5rpx;
  font-family: AlibabaPuHuiTi-2-45-Light;
}
/* 活动内容信息 */
#activityInformation{
  width: 98%;
  border-radius: 10rpx;
  margin: 0 auto;
  height: 120rpx;
  margin-top: 10rpx;
  display: flex;
  background-color: #f6f6f6;
  /* border: 1px solid red; */
}
#activityImage{
    width: 80rpx;
    height: 100rpx;
    margin-top: 8rpx;
    margin-left: 10rpx;
    border-radius:10rpx;
}
#activityBox{
    width: 70%;
    /* border: 1px solid red; */
    margin-left: 16rpx;
}
#activityTitle{
  /* border: 1px solid red; */
  height: 35rpx;
  margin-top: 18rpx;
  font-size: 25rpx;
  letter-spacing: 1rpx;
  font-family: AlibabaPuHuiTi-2-45-Light;
  overflow: hidden;
  text-overflow: ellipsis; 
  display: -webkit-box;
  -webkit-line-clamp:1;
  -webkit-box-orient: vertical;
}
#activityBox_one{
  display: flex;
  margin-top: 16rpx;
  letter-spacing: 4rpx;
}
#one_prtice{
  color: red;
  font-family: AlibabaPuHuiTi-2-45-Light;
}
#one_notice{
  font-size: 24rpx;
  margin-top: 5rpx;
  margin-left: 8rpx;
  color: gray;
  font-family: AlibabaPuHuiTi-2-45-Light;
}
/* 添加美好瞬间 */
.addWonder{
  /* border: 1px solid red; */
  width: 80rpx;
  height: 80rpx;
  position: fixed;
  bottom:120rpx;
  right: 20rpx;

}
.addWonder_icon{
    width: 80rpx;
    height: 80rpx;
}
