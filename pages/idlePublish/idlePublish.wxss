.select_box{
  width:60%;
  height:50%;
  border-radius: 14rpx;
  position: relative;
  margin-top: 20rpx;
  border: 1px solid gray;
}
.select_box .select{
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 10rpx;
  /* border: 1px solid red; */
}
.select_box .select .select_text{
  font-size: 26rpx;
  color: #777777;
  line-height: 28rpx;
  flex: 1;
  /* border: 1px solid red; */
}
.select_box .select .select_img{
  width: 30rpx;
  height: 30rpx;
  display: block;
  transition:transform 0.3s;
  /* border: 1px solid red; */
}
.select_box .select .select_img_rotate{
  transform:rotate(180deg); 
  /* border: 1px solid red; */
}
.select_box .option_box{
  position: absolute;
  top: calc(100% - 1px);
  width: 100%;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  background: #fff;
  transition: height 0.3s;
  border-left:1px solid #efefef;
  border-right:1px solid #efefef;
  /* border: 1px solid red; */
}
.select_box .option_box .option{
  display: block;
  line-height: 30rpx; 
  font-size: 26rpx;
  border-top: 1px solid #efefef;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
  z-index: 9999;
  /* border: 1px solid red; */
}

